{% block title %}{% endblock %}
<!-- CSS only -->
<link rel="stylesheet" href="{{asset('css/login.css')}}"/>
{% block body %}
	<div class="wrapper">
		<div class="title-text">
			<div class="title login">YMNA TRADING SARL</div>

		</div>
		<div class="form-container">

			<img class="title login" style="margin-left:35px ; width:250px" src="{{asset('/img/LOGO.jpg')}}" alt=""/>

			<div class="form-inner">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}


					<div class="field">
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" autocomplete="email" required autofocus>
					</div>
					<div class="field">
						<input type="password" name="password" placeholder="Password" id="inputPassword" class="form-control" autocomplete="current-password" required>
					</div>
					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
																																																																																																																																					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																																																																																																																					        See https://symfony.com/doc/current/security/remember_me.html
																																																																																																																																					
																																																																																																																																					        <div class="checkbox mb-3">
																																																																																																																																					            <label>
																																																																																																																																					                <input type="checkbox" name="_remember_me"> Remember me
																																																																																																																																					            </label>
																																																																																																																																					        </div>
																																																																																																																																					    #}
					<div class="field btn">
						<div class="btn-layer"></div>
						<button class="btn btn-lg btn-primary" type="submit">
							Sign in
						</button>
						<div></form>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
